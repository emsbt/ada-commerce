<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.adacommerce.controller.MainController"
            prefWidth="1200" prefHeight="700">
    <top>
        <VBox>
            <children>
                <MenuBar>
                    <menus>
                        <Menu text="Arquivo">
                            <items>
                                <MenuItem text="Logout" onAction="#onLogout"/>
                                <MenuItem text="Sair" onAction="#onSair"/>
                            </items>
                        </Menu>
                        <Menu text="Relatórios">
                            <items>
                                <MenuItem text="Relatórios" onAction="#abrirRelatorios"/>
                            </items>
                        </Menu>
                        <Menu text="Cadastros">
                            <items>
                                <MenuItem text="Categorias" onAction="#abrirCategorias"/>
                                <MenuItem text="Clientes" onAction="#abrirClientes"/>
                                <MenuItem text="Produtos" onAction="#abrirProdutos"/>
                            </items>
                        </Menu>
                        <Menu text="Operações">
                            <items>
                                <MenuItem text="Pedidos" onAction="#abrirPedidos"/>
                            </items>
                        </Menu>
                        <Menu text="Sistema">
                            <items>
                                <MenuItem text="Configurações" onAction="#abrirConfig"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar>
                    <items>
                        <Label fx:id="lblTitulo" text="Relatórios" style="-fx-font-size:16; -fx-font-weight: bold;"/>
                        <Region/>
                        <Label fx:id="lblUsuario" text="Usuário:"/>
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
    <bottom>
        <HBox style="-fx-padding:6; -fx-background-color:#ececec;">
            <children><Label fx:id="lblStatus" text="Pronto."/></children>
        </HBox>
    </bottom>
</BorderPane>