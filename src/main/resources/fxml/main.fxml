<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefWidth="1200" prefHeight="750"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.adacommerce.controller.MainController">
    <top>
        <MenuBar>
            <menus>
                <Menu text="Cadastros">
                    <MenuItem fx:id="menuCategorias" text="Categorias"/>
                    <MenuItem fx:id="menuProdutos" text="Produtos"/>
                    <MenuItem fx:id="menuClientes" text="Clientes"/>
                </Menu>
                <Menu text="Operações">
                    <MenuItem fx:id="menuPedidos" text="Pedidos"/>
                </Menu>
                <Menu text="Admin">
                    <MenuItem fx:id="menuUsuarios" text="Usuários"/>
                </Menu>
                <Menu text="Sistema">
                    <MenuItem fx:id="menuLogout" text="Logout"/>
                    <MenuItem fx:id="menuSair" text="Sair"/>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox spacing="8" styleClass="side-nav">
            <children>
                <Label text="Módulos" styleClass="side-title"/>
                <Button fx:id="btnNavCategorias" text="Categorias" maxWidth="Infinity"/>
                <Button fx:id="btnNavProdutos" text="Produtos" maxWidth="Infinity"/>
                <Button fx:id="btnNavClientes" text="Clientes" maxWidth="Infinity"/>
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area"/>
    </center>
    <bottom>
        <HBox styleClass="status-bar">
            <children>
                <Label fx:id="lblStatus" text="Pronto"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblUser" text="Usuário:"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
