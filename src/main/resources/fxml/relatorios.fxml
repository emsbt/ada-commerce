            </children>
        </HBox>

        <TextArea fx:id="txtDescricao" editable="false" prefRowCount="2" wrapText="true"
                  style="-fx-font-size:11; -fx-opacity:0.85;"/>

        <TableView fx:id="table" prefHeight="420"/>

        <Label fx:id="lblStatus" text="Pronto." style="-fx-font-weight:bold;"/>
    </children>
</VBox>