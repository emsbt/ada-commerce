<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.adacommerce.controller.RelatoriosController">

    <top>
        <ToolBar>
            <items>
                <ComboBox fx:id="cbTipo" prefWidth="200"/>
                <DatePicker fx:id="dpInicio"/>
                <DatePicker fx:id="dpFim"/>
                <TextField fx:id="tfValorOpcional" promptText="Valor opcional" prefWidth="110"/>
                <TextField fx:id="tfLimite" promptText="Limite" prefWidth="70"/>
                <Button text="Gerar" onAction="#onGerar"/>
                <Button fx:id="btnExportar" text="Exportar CSV" onAction="#onExportar" disable="true"/>
            </items>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="table"/>
    </center>

    <bottom>
        <VBox spacing="4">
            <TitledPane text="Descrição do Relatório" expanded="false">
                <content>
                    <TextArea fx:id="txtDescricao" wrapText="true" prefRowCount="2"/>
                </content>
            </TitledPane>
            <HBox spacing="10">
                <children>
                    <Label fx:id="lblStatus" text="Pronto."/>
                </children>
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>