<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.adacommerce.controller.RelatoriosController">

    <center>
        <VBox spacing="10">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
            <Label text="Relatórios" style="-fx-font-weight:bold; -fx-font-size:16;"/>
            <HBox spacing="8">
                <Label text="Tipo:"/>
                <ComboBox fx:id="comboTipo" prefWidth="240"/>
                <Label text="Período:"/>
                <DatePicker fx:id="dtInicio"/>
                <DatePicker fx:id="dtFim"/>
                <Button text="Gerar" onAction="#onGerar"/>
            </HBox>
            <TableView fx:id="tableResultados" prefHeight="360"/>
            <Label fx:id="lblResumo" text=""/>
        </VBox>
    </center>
</BorderPane>