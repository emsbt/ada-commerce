<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.adacommerce.controller.RelatoriosController"
      spacing="10" style="-fx-padding:12;">
    <children>
        <HBox spacing="8">
            <children>
                <Label text="Tipo:"/>
                <ComboBox fx:id="cbTipo" prefWidth="220"/>
                <Label text="InÃ­cio:"/>
                <DatePicker fx:id="dpInicio"/>
                <Label text="Fim:"/>
                <DatePicker fx:id="dpFim"/>
                <Label text="Valor opc:"/>
                <TextField fx:id="tfValorOpcional" promptText="Ex: 100.00" prefWidth="90"/>
                <Label text="Limite:"/>
                <TextField fx:id="tfLimite" promptText="Ex: 10" prefWidth="60"/>
                <Button text="Gerar" onAction="#onGerar"/>
