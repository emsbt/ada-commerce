<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="8" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml" fx:controller="br.com.adacommerce.controller.UsuariosController">
    <HBox spacing="6">
        <TextField fx:id="txtNome" promptText="Nome"/>
        <TextField fx:id="txtEmail" promptText="Email"/>
        <TextField fx:id="txtUsuario" promptText="Usuário"/>
        <PasswordField fx:id="txtSenha" promptText="Senha"/>
        <Button text="Salvar" fx:id="btnSalvar" onAction="#onSalvar"/>
        <Button text="Editar" fx:id="btnEditar" onAction="#onEditar"/>
    </HBox>
    <TableView fx:id="tableUsuarios" prefHeight="250">
        <columns>
            <TableColumn fx:id="colNome" text="Nome"/>
            <TableColumn fx:id="colEmail" text="Email"/>
            <TableColumn fx:id="colUsuario" text="Usuário"/>
            <TableColumn fx:id="colAtivo" text="Ativo"/>
        </columns>
    </TableView>
</VBox>