<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.adacommerce.controller.CadastrosController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #336699; -fx-padding: 10px;">
            <Label text="Cadastros" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="btnProdutos" text="Produtos" prefWidth="200"/>
            <Button fx:id="btnClientes" text="Clientes" prefWidth="200"/>
            <Button fx:id="btnFornecedores" text="Fornecedores" prefWidth="200"/>
            <Button fx:id="btnVoltar" text="Voltar" prefWidth="200"/>
        </VBox>
    </center>
</BorderPane>