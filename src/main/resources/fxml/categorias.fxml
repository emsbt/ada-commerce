<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.adacommerce.controller.CategoriasController">

    <left>
        <VBox spacing="8" prefWidth="320" style="-fx-padding:12;">
            <children>
                <Label text="Cadastro de Categoria" style="-fx-font-size:15; -fx-font-weight:bold;"/>
                <TextField fx:id="txtNome" promptText="Nome da Categoria"/>
                <TextArea fx:id="txtDescricao" prefRowCount="3" promptText="Descrição"/>
                <ComboBox fx:id="cbCategoriaPai" promptText="Categoria Pai (opcional)" maxWidth="1.7976931348623157E308"/>
                <CheckBox fx:id="chkAtivo" text="Ativo" selected="true"/>
                <HBox spacing="10">
                    <children>
                        <Button text="Salvar" onAction="#onSalvar"/>
                        <Button text="Limpar" onAction="#onLimpar"/>
                        <Button text="Excluir" onAction="#onExcluir"/>
                    </children>
                </HBox>
                <Label fx:id="lblMensagem" textFill="crimson"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="6" style="-fx-padding:10;">
            <children>
                <Label text="Categorias" style="-fx-font-size:15; -fx-font-weight:bold;"/>
                <TableView fx:id="tblCategorias" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                        <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="200"/>
                        <TableColumn fx:id="colPai" text="Categoria Pai" prefWidth="150"/>
                        <TableColumn fx:id="colAtivo" text="Ativo" prefWidth="80"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>