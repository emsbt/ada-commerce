<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SpinnerValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.adacommerce.controller.PedidosController">

    <center>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Barra de ações -->
            <HBox spacing="6">
                <Label text="Pedidos" style="-fx-font-weight:bold; -fx-font-size:14;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Novo Pedido" onAction="#onNovo"/>
                <Button text="Salvar Rascunho" fx:id="btnSalvar" onAction="#onSalvar" disable="true"/>
                <Button text="Confirmar" fx:id="btnConfirmar" onAction="#onConfirmar" disable="true"/>
                <Button text="Cancelar" fx:id="btnCancelar" onAction="#onCancelar" disable="true"/>
                <Button text="Abrir" fx:id="btnAbrir" onAction="#onAbrir" disable="true"/>
                <Button text="Finalizar" fx:id="btnFinalizar" onAction="#onFinalizar" disable="true"/>
                <Button text="Aguardar Pagamento" fx:id="btnAguardarPagamento" onAction="#onAguardarPagar" disable="true"/>
                <Button text="Pagar" fx:id="btnPagar" onAction="#onPagar" disable="true"/>
            </HBox>

            <SplitPane dividerPositions="0.55">
                <items>

                    <!-- Lista de pedidos -->
                    <VBox spacing="4">
                        <TableView fx:id="tablePedidos" prefHeight="380">
                            <columns>
                                <TableColumn fx:id="colNumero" text="Número" prefWidth="120"/>
                                <TableColumn fx:id="colCliente" text="Cliente" prefWidth="180"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="90"/>
                                <TableColumn fx:id="colTotal" text="Total" prefWidth="90"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- Formulário / Itens -->
                    <VBox spacing="6">
                        <padding><Insets top="6" right="6" bottom="6" left="6"/></padding>

                        <Label fx:id="lblModo" text="Modo: visualização" style="-fx-font-weight:bold;"/>

                        <Label text="Número:"/>
                        <TextField fx:id="txtNumero" disable="true"/>

                        <Label text="Cliente:"/>
                        <ComboBox fx:id="comboCliente" disable="true"/>

                        <Label text="Desconto:"/>
                        <TextField fx:id="txtDesconto" disable="true"/>

                        <Label text="Itens:"/>

                        <!-- Seleção de produto e quantidade -->
                        <HBox spacing="6">
                            <ComboBox fx:id="cbProduto" promptText="Produto" prefWidth="220" disable="true"/>
                            <Spinner fx:id="spQtd" prefWidth="90" disable="true">
                                <valueFactory>
                                    <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="999" initialValue="1"/>
                                </valueFactory>
                            </Spinner>
                            <Button text="+ Item" fx:id="btnAddItem" onAction="#onAddItem" disable="true"/>
                            <Button text="- Item" fx:id="btnRemItem" onAction="#onRemItem" disable="true"/>
                        </HBox>

                        <TableView fx:id="tableItens" prefHeight="180">
                            <columns>
                                <TableColumn fx:id="colItemProduto" text="Produto" prefWidth="160"/>
                                <TableColumn fx:id="colItemQuantidade" text="Qtd" prefWidth="60"/>
                                <TableColumn fx:id="colItemPreco" text="Preço" prefWidth="80"/>
                                <TableColumn fx:id="colItemSubtotal" text="Subtotal" prefWidth="80"/>
                            </columns>
                        </TableView>

                        <Label fx:id="lblTotais" text="Bruto: 0,00 | Desconto: 0,00 | Líquido: 0,00"/>
                    </VBox>
                </items>
            </SplitPane>
        </VBox>
    </center>
</BorderPane>